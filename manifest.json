{
	"manifest_version": 3,
	"name": "LocalFortress",
	"version": "1.0.2",

	"description": "Protect your privacy by blocking most requests to localhost.",

	"icons": {
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png"
	},

	"background": {
		"scripts": ["index.js"]
	},

	"permissions": [
		"storage",
		"tabs",
		"webRequest",
		"webRequestBlocking"
	],

	"host_permissions": [
		"<all_urls>"
	],

	"action": {
		"default_icon": "icons/icon-32.png",
		"default_title": "LocalFortress",
		"default_popup": "popup/index.html"
	},

	"browser_specific_settings": {
		"gecko": {
			"id": "localfortress@oirnoir.dev"
		}
	}
}
